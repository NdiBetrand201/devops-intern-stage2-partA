# Image references for Blue and Green services
BLUE_IMAGE=yimikaade/wonderful:devops-stage-two
GREEN_IMAGE=yimikaade/wonderful:devops-stage-two

# Controls which pool is primary (blue or green)
ACTIVE_POOL=blue

# Release IDs passed to the apps for X-Release-Id header
RELEASE_ID_BLUE=v1.0-blue
RELEASE_ID_GREEN=v1.0-green

# Optional: Nginx public port (defaults to 8080)
PORT=8080